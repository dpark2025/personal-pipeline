# Personal Pipeline MCP Server Configuration
# Copy this file to .env and configure your environment variables

# Server Configuration
PORT=3000
HOST=localhost
LOG_LEVEL=info
NODE_ENV=development

# Cache Configuration
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
HEALTH_CHECK_INTERVAL_MS=60000

# Embedding Configuration
ENABLE_EMBEDDINGS=true
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_CACHE_SIZE=1000

# Source Authentication - Configure as needed for your sources
# Confluence
CONFLUENCE_TOKEN=your_confluence_bearer_token_here

# GitHub
GITHUB_TOKEN=your_github_personal_access_token_here

# Notion (if using)
NOTION_TOKEN=your_notion_integration_token_here

# Database connections (if using)
DATABASE_URL=postgresql://user:password@localhost:5432/pp_db
REDIS_URL=redis://localhost:6379

# Additional source-specific credentials
# Add more environment variables as needed for your documentation sources